<form action="{{ path('task_create') }}" method="post" {{ form_enctype(form) }} id="task_new" class="ajax-form">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">&times;</a>
        <h3>{{ 'New Task'|trans }}</h3>
    </div>
    <div class="modal-body">
        {{ form_widget(form) }}
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit">{{ 'Add'|trans }}</button>
        <a class="btn" data-dismiss="modal" id="close">{{ 'Close'|trans }}</a>
    </div>
</form>